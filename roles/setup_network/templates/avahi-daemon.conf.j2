[server]
host-name={{ hostname }}
use-ipv4=yes
use-ipv6=yes
allow-interfaces={{ NETWORK_CONF.allow_interface }}
deny-interfaces={{ NETWORK_CONF.deny_interface }}

ratelimit-interval-usec=1000000
ratelimit-burst=1000

[wide-area]
enable-wide-area=yes

[publish]
publish-hinfo=no
publish-workstation=no

[rlimits]
rlimit-core=0
rlimit-data=4194304
rlimit-fsize=0
rlimit-nofile=768
rlimit-stack=4194304
rlimit-nproc=3
